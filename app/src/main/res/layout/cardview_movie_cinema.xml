<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_movie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    app:cardCornerRadius="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="160dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dune" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:orientation="vertical"
                android:paddingStart="@dimen/dimen_15dp"
                android:paddingTop="@dimen/dimen_5dp">


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/proxima_font_family"
                        android:maxLines="1"
                        android:text="Dune"
                        android:paddingEnd="15dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="2dp"
                    android:clickable="false"
                    app:srb_drawableEmpty="@drawable/ic_empty_star"
                    app:srb_drawableFilled="@drawable/ic_star"
                    app:srb_minimumStars="1"
                    app:srb_numStars="5"
                    app:srb_scrollable="false"
                    app:srb_starHeight="15dp"
                    app:srb_starPadding="2dp"
                    app:srb_starWidth="15dp"
                    app:srb_clickable="false"
                    app:srb_stepSize="0.1" />

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.15"
                    android:text="Action, Adventure, Drama"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_11sp" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="2h 35 min"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dimen_11sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/dimen_15dp">

                    <Button
                        android:id="@+id/runOne"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/valid_edit_text"
                        android:clickable="false"
                        android:fontFamily="@font/proxima_nova_alt_light"
                        android:gravity="center"
                        android:text="12:30"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/runTwo"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/valid_edit_text"
                        android:clickable="false"
                        android:fontFamily="@font/proxima_nova_alt_light"
                        android:gravity="center"
                        android:text="17:00"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/runThree"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginHorizontal="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/valid_edit_text"
                        android:clickable="false"
                        android:fontFamily="@font/proxima_nova_alt_light"
                        android:gravity="center"
                        android:text="20:00"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:background="@drawable/info_home_nav_gradient" />
    </FrameLayout>

</androidx.cardview.widget.CardView>