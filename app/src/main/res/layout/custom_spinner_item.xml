<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/spinner_item_round_corners">

        <ImageView
            android:id="@+id/imageViewThemeSpinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circle_gradient_imperial_theme"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/textViewThemeSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@id/imageViewThemeSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/proxima_nova_alt_light"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>