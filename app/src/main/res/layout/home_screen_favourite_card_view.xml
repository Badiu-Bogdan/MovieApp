<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    app:cardCornerRadius="@dimen/fav_card_view_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_home_fav"
            android:layout_width="@dimen/favourite_card_image_width"
            android:layout_height="@dimen/favourite_card_image_height"
            android:background="@drawable/ic_launcher_background"
            android:src="@drawable/image_home_fav_gradient" />

        <LinearLayout
            android:layout_width="@dimen/dimen_200dp"
            android:layout_height="match_parent"
            android:background="@drawable/info_home_nav_gradient"
            android:orientation="vertical"
            android:paddingStart="@dimen/dimen_15dp"
            android:paddingTop="@dimen/dimen_5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/movie_title_home_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dune"
                    android:textColor="@color/white"
                    android:textSize="@dimen/title_text_size"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movie_year_home_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:text="(2021)"
                    android:textColor="@color/white"
                    android:textSize="@dimen/year_text_size" />
            </LinearLayout>

            <RatingBar
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:progressBackgroundTint="?colorPrimary"
                android:progressTint="?colorPrimary"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/movie_description_home_fav"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:letterSpacing="0.15"
                android:text="Action, Adventure, Drama"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_11sp" />

            <TextView
                android:id="@+id/movie_running_time_home_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:text="2h 35 min"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen_11sp" />

            <Button
                android:id="@+id/watch_trailer_button_home"
                android:layout_width="@dimen/watch_trailer_width"
                android:layout_height="@dimen/watch_trailer_height"
                android:layout_marginStart="@dimen/watch_trailer_margin_start"
                android:layout_marginTop="@dimen/watch_trailer_margin_top"
                android:background="@drawable/gradient_button"
                android:drawableStart="@drawable/ic_baseline_play_circle_outline_20"
                android:drawablePadding="@dimen/watch_trailer_icon_padding"
                android:gravity="start|center_vertical"
                android:paddingLeft="@dimen/dimen_5dp"
                android:text="Watch Trailer"
                android:textColor="@color/white"
                android:textSize="@dimen/watch_trailer_text_size" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>